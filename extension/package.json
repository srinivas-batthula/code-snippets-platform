{
  "name": "codecapsule",
  "displayName": "CodeCapsule",
  "description": "One-click export/import VSCode dev environment snapshots",
  "publisher": "srinivas-batthula",
  "repository": {
    "type": "git",
    "url": "https://github.com/srinivas-batthula/codecapsule"
  },
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other",
    "Education",
    "Extension Packs",
    "Formatters"
  ],
  "keywords": [
    "setup",
    "dev-env"
  ],
  "icon": "src/assets/icon.png",
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codecapsule.helloWorld",
        "title": "Hello World : CodeCapsule"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.32.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "dotenv": "^17.2.2"
  }
}
