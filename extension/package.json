{
  "name": "codesnippets",
  "displayName": "CodeSnippets",
  "description": "One-click export/import VSCode dev environment snapshots & Code Snippets",
  "publisher": "srinivas-batthula",
  "repository": {
    "type": "git",
    "url": "https://github.com/HimanshuBijja/code-snippets-platform"
  },
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other",
    "Education",
    "Extension Packs",
    "Formatters"
  ],
  "keywords": [
    "setup",
    "exchange dev-env",
    "code-snippets"
  ],
  "icon": "src/assets/icon.png",
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "CodeSnippets : Settings",
      "properties": {
        "codesnippets.apiBaseUrl": {
          "type": "string",
          "default": "http://localhost:3000",
          "description": "Base URL for CodeSnippets backend API"
        },
        "codesnippets.secretKey": {
          "type": "string",
          "default": "codesnippets.jwt",
          "description": "Secret-Key for storing JWT"
        },
        "codesnippets.extensionName": {
          "type": "string",
          "default": "CodeSnippets"
        }
      }
    },
    "commands": [
      {
        "command": "codesnippets.intro",
        "title": "CodeSnippets: Intro"
      },
      {
        "command": "codesnippets.login",
        "title": "CodeSnippets: Login"
      },
      {
        "command": "codesnippets.logout",
        "title": "CodeSnippets: Logout"
      },
      {
        "command": "codesnippets.exportSnippet",
        "title": "CodeSnippets: Export Code Snippet"
      },
      {
        "command": "codesnippets.importSnippet",
        "title": "CodeSnippets: Import Code Snippet"
      },
      {
        "command": "codesnippets.exportSnapshot",
        "title": "CodeSnippets: Export Dev-Env Snapshot"
      },
      {
        "command": "codesnippets.importSnapshot",
        "title": "CodeSnippets: Import Dev-Env Snapshot"
      },
      {
        "command": "codesnippets.openSnapshotFiles",
        "title": "CodeSnippets: Open Snapshot Files"
      },
      {
        "command": "codesnippets.search",
        "title": "CodeSnippets: Search"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "codesnippets.exportSnippet",
          "when": "editorHasSelection",
          "group": "navigation"
        },
        {
          "command": "codesnippets.importSnippet",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "codesnippets.intro",
        "key": "ctrl+shift+m",
        "mac": "cmd+shift+m"
      },
      {
        "command": "codesnippets.logout",
        "key": "ctrl+shift+l",
        "mac": "cmd+shift+l"
      },
      {
        "command": "codesnippets.exportSnippet",
        "key": "ctrl+shift+e",
        "mac": "cmd+shift+e",
        "when": "editorHasSelection"
      },
      {
        "command": "codesnippets.importSnippet",
        "key": "ctrl+shift+i",
        "mac": "cmd+shift+i"
      },
      {
        "command": "codesnippets.exportSnapshot",
        "key": "ctrl+shift+x",
        "mac": "cmd+shift+x"
      },
      {
        "command": "codesnippets.importSnapshot",
        "key": "ctrl+shift+p",
        "mac": "cmd+shift+p"
      },
      {
        "command": "codesnippets.openSnapshotFiles",
        "key": "ctrl+shift+o",
        "mac": "cmd+shift+o"
      },
      {
        "command": "codesnippets.search",
        "key": "ctrl+shift+s",
        "mac": "cmd+shift+s"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.32.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "node-fetch": "^3.3.2"
  }
}